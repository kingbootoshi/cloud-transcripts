# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=cloud-transcripts-uploads

# Modal
MODAL_TOKEN=your-modal-token
WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_URL must include the complete path to the webhook endpoint
# This URL will receive POST requests from the Modal worker with transcription results
# Format: https://your-domain.com/api/webhook/modal (do NOT use just the root domain)
WEBHOOK_URL=https://your-app.com/api/webhook/modal
MODAL_QUEUE_URL=https://your-app.com/api/webhook/modal

# Sentry
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Hugging Face (for speaker diarization)
HF_TOKEN=your-huggingface-token